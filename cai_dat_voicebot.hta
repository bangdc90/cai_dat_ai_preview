        function readLocalVersion() {
            try {
                if (fso.FileExists(versionJsonPath)) {
                    // Use FileSystemObject for local files (safer, no security restrictions)
                    var file = fso.OpenTextFile(versionJsonPath, 1, false, -2); // -2 = System default
                    var content = file.ReadAll();
                    file.Close();
                    
                    // Remove BOM if present
                    if (content.charCodeAt(0) === 0xFEFF) {
                        content = content.substring(1);
                    }
                    
                    var versionData = JSON.parse(content);
                    localVersion = versionData.latest_version || "0.0.0";
                } else {
