        function readGitHubFile(filePath) {
            logMessage("[INFO] ƒêang t·∫£i " + filePath + "...", "info");
            try {
                var url = "https://raw.githubusercontent.com/bangdc90/cai_dat_ai/main/" + filePath;
                // Use Windows TEMP folder - always has write permission
                var tempFolder = shell.ExpandEnvironmentStrings("%TEMP%");
                var tempFile = tempFolder + "\\voicebot_" + new Date().getTime() + ".txt";
                
                // Use PowerShell to download and save as ASCII (compatible with FileSystemObject)
                var psCmd = 'powershell -ExecutionPolicy Bypass -Command "' +
                           '$ProgressPreference = \'SilentlyContinue\'; ' +
                           '[Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12; ' +
                           'try { ' +
                           '$content = (New-Object System.Net.WebClient).DownloadString(\'' + url + '\'); ' +
                           '$content | Out-File -FilePath \'' + tempFile + '\' -Encoding ASCII -NoNewline; ' +
                           'exit 0 } catch { exit 1 }"';
                var result = shell.Run(psCmd, 0, true);
                
                if (result !== 0 || !fso.FileExists(tempFile)) {
                    // Fallback: Use certutil
                    logMessage("[INFO] Th·ª≠ certutil...", "info");
                    var certutilCmd = 'cmd /c certutil -urlcache -split -f "' + url + '" "' + tempFile + '" >nul 2>&1';
                    result = shell.Run(certutilCmd, 0, true);
                }
                
                if (fso.FileExists(tempFile)) {
                    // Read with FileSystemObject in ASCII mode
                    var file = fso.OpenTextFile(tempFile, 1, false, 0); // 0 = ASCII
                    var content = "";
                    if (!file.AtEndOfStream) {
                        content = file.ReadAll();
                    }
                    file.Close();
                    
                    // Cleanup
                    try { fso.DeleteFile(tempFile); } catch(e) {}
                    
                    // Clean content - remove BOM and trailing whitespace
                    content = content.replace(/^\uFEFF/, '').replace(/^\xEF\xBB\xBF/, '').trim();
                    
                    if (content.length > 0) {
                        logMessage("[OK] T·∫£i th√†nh c√¥ng (" + content.length + " chars)", "success");
                        return content;
                    }
                }
                
                throw new Error("Kh√¥ng th·ªÉ t·∫£i file t·ª´ GitHub. Vui l√≤ng ki·ªÉm tra k·∫øt n·ªëi Internet.");
            } catch(e) {
                logMessage("[L·ªñI] " + e.message, "error");
                return null;
            }
        }

        function compareVersions(v1, v2) {
            var parts1 = v1.split('.');
            var parts2 = v2.split('.');
            
            for (var i = 0; i < Math.max(parts1.length, parts2.length); i++) {
                var p1 = parseInt(parts1[i] || 0);
                var p2 = parseInt(parts2[i] || 0);
                if (p1 > p2) return 1;
                if (p1 < p2) return -1;
            }
            return 0;
        }

